@model Biblioteczka.ViewModels.BookViewModel
@{
    ViewBag.Title = "Add Book";
}
@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
         <h2>Dodaj swoją książkę</h2>
         <form method="post">
             <div asp-validation-summary="ModelOnly"></div>
             @if (ViewBag.UserMessage != null)
            {
                 <div>@ViewBag.UserMessage</div>

             }
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-muted"></span>
        </div>
        <div class="form-group">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-muted"></span>
        </div>
        <div class="form-group">
            <label asp-for="Pages"></label>
            <input asp-for="Pages" class="form-control" />
            <span asp-validation-for="Pages" class="text-muted"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea cols="40" rows="4" asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-muted"></span>
        </div>
        <div class="form-group">
            <label>Start Date</label>
            <input asp-for="DateStarted" class="form-control" />
            <span asp-validation-for="DateStarted" class="text-muted"></span>
        </div>
        <div class="form-group">
            <a asp-controller="App" asp-action="Index" class="btn btn-default">Cancel</a>
            <input type="submit" value="Add Book" class="btn btn-success" />
        </div>
        </form>
    </div>


</div>